{
  "ociVersion": "1.0.0",
  "root": {
    "path": "rootfs",
    "readonly": false
  },
  "process": {
    "args": [
      "/bin/busybox",
      "sh",
      "-c",
      "echo 'Hello from container!' && echo \"PID: $$\" && ls -la / && sleep 3"
    ],
    "env": [
      "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
      "HOSTNAME=kontainer-test"
    ],
    "cwd": "/",
    "user": {
      "uid": 1000,
      "gid": 1000
    },
    "noNewPrivileges": true
  },
  "hostname": "kontainer-test",
  "linux": {
    "namespaces": [
      {
        "type": "pid"
      },
      {
        "type": "mount"
      },
      {
        "type": "network"
      },
      {
        "type": "uts"
      },
      {
        "type": "ipc"
      },
      {
        "type": "user"
      }
    ],
    "uidMappings": [
      {
        "containerID": 0,
        "hostID": 100000,
        "size": 65536
      }
    ],
    "gidMappings": [
      {
        "containerID": 0,
        "hostID": 100000,
        "size": 65536
      }
    ],
    "cgroupsPath": "kontainer-test",
    "resources": {
      "memory": {
        "limit": 536870912
      },
      "cpu": {
        "shares": 1024,
        "quota": 50000,
        "period": 100000
      }
    },
    "seccomp": {
      "defaultAction": "SCMP_ACT_ALLOW",
      "syscalls": [
        {
          "names": ["chmod", "fchmod", "fchmodat"],
          "action": "SCMP_ACT_ERRNO",
          "errnoRet": 1
        }
      ]
    }
  }
}
